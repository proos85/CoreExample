<div class="row">
    <div class="col-md-12">
        <h1>Superhero's</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
            </tr>
            </thead>
            <tbody>
            @{
                var superHeroNr = 1;
            }
            @foreach (var superHero in Model.SuperHeros)
            {
                <tr>
                    <th scope="row">@superHeroNr</th>
                    <td>@superHero.Name</td>
                    <td>@superHero.Age</td>
                </tr>
                superHeroNr++;
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div clas="col-md-12">&nbsp;</div>
</div>
<div class="row">
    <div class="col-md-12">
        @await Component.InvokeAsync("WhoAmI")
    </div>
</div>